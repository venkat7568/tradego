# ==================== UPSTOX API CREDENTIALS ====================
# Get these from: https://account.upstox.com/developer/apps
# Create a new app and copy API Key and Secret

UPSTOX_API_KEY=your_api_key_here
UPSTOX_API_SECRET=your_api_secret_here

# Upstox API base URL (default: https://api.upstox.com)
# UPSTOX_API_BASE=https://api.upstox.com

# Access token (auto-managed by token_manager, leave blank)
# UPSTOX_ACCESS_TOKEN=

# Redirect URI (must match exactly what you set in Upstox Developer Portal)
# For VPS: http://your-vps-ip:8000/callback
# For localhost testing: http://localhost:8000/callback
UPSTOX_REDIRECT_URI=http://localhost:8000/callback


# ==================== EMAIL CREDENTIALS ====================
# For Gmail: Use App Password, NOT your regular password!
# How to get App Password:
# 1. Enable 2FA: https://myaccount.google.com/security
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Copy the 16-character password (remove spaces)

# Enable/disable email notifications (True or False)
EMAIL_ENABLED=True

# SMTP server (for Gmail, keep as is)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Your Gmail address
SMTP_USER=your-email@gmail.com

# Gmail App Password (16 characters, no spaces)
# Example: abcdefghijklmnop
SMTP_PASSWORD=your-16-char-app-password

# Email addresses
FROM_EMAIL=your-email@gmail.com
TO_EMAIL=your-email@gmail.com


# ==================== NEWS & SEARCH SETTINGS ====================
# Brave Search API (OPTIONAL - for advanced news search)
# Get free API key from: https://brave.com/search/api/
# If not set, system will only use Moneycontrol scraping
# BRAVE_API_KEY=

# News module logging level (DEBUG, INFO, WARNING, ERROR)
# NEWS_LOG_LEVEL=WARNING

# Custom User-Agent for news scraping (optional)
# NEWS_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Search timeout in seconds (default: 10)
# SEARCH_TIMEOUT=10


# ==================== UPSTOX TECHNICAL SETTINGS ====================
# Instrument cache directory (default: ./.cache_upstox)
# UPSTOX_CACHE_DIR=./.cache_upstox

# How often to refresh instrument list (hours, default: 24)
# UPSTOX_INSTR_MAX_AGE_H=24

# Prefer NSE-only instruments for faster loading (1=yes, 0=all exchanges)
# UPSTOX_NSE_ONLY=1

# Custom instruments URL (optional, default uses Upstox CDN)
# UPSTOX_INSTRUMENTS_URL=https://assets.upstox.com/market-quote/instruments/exchange/NSE.json.gz


# ==================== LOGGING LEVELS ====================
# Technical client logging (DEBUG, INFO, WARNING, ERROR)
# TECH_LOG_LEVEL=INFO

# Operator/trading logging (DEBUG, INFO, WARNING, ERROR)
# OPERATOR_LOG_LEVEL=INFO


# ==================== TRADING SETTINGS ====================
# Trading Mode: LIVE or BACKTEST (default: BACKTEST for safety)
# LIVE: Places real orders on Upstox with real money
# BACKTEST: Paper trading mode for testing strategies
TRADING_MODE=BACKTEST

# Fetch live balance from Upstox in LIVE mode (True or False)
# If True, system will fetch available margin from broker
# If False, uses TOTAL_CAPITAL from config
FETCH_LIVE_BALANCE=False

# Operating mode: live, backtest, paper (default: live)
# MODE=live

# Strict live mode: requires UPSTOX_ACCESS_TOKEN when live=True (1=strict, 0=relaxed)
# STRICT_LIVE_MODE=1

# Timezone (default: Asia/Kolkata)
# TZ=Asia/Kolkata

# Tick size for price rounding (default: 0.05 for Indian equities)
# TICK_SIZE=0.05


# ==================== BROKERAGE FEE SETTINGS ====================
# Customize these to match your broker's fee structure
# All values are optional, defaults are reasonable estimates for Indian brokers

# Brokerage per order in ₹ (default: 20.0)
# BROKERAGE_PER_ORDER=20.0

# Exchange transaction charges in basis points (default: 3.25)
# EXCHANGE_TXN_BPS=3.25

# SEBI charges per crore of turnover in ₹ (default: 10.0)
# SEBI_CHARGES_PER_CR=10.0

# GST percentage (default: 18.0)
# GST_PCT=18.0

# STT for delivery trades in basis points (default: 10.0)
# STT_DELIVERY_BPS=10.0

# STT for intraday trades in basis points (default: 2.5)
# STT_INTRADAY_BPS=2.5

# Stamp duty in basis points (default: 1.5)
# STAMP_BPS=1.5


# ==================== NETWORK & SECURITY ====================
# Allow insecure SSL connections (true/false, default: false)
# Only enable if you have SSL/TLS certificate issues
# ALLOW_INSECURE_SSL=false


# ==================== OPTIONAL: ADVANCED SETTINGS ====================
# You can override config.py defaults here if needed

# Capital & Allocation
# TOTAL_CAPITAL=1000000
# INTRADAY_ALLOCATION=0.70
# SWING_ALLOCATION=0.30

# Risk Limits
